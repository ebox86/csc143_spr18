package StanleysStorage;

import StanleysStorage.Unit.unitType;

public class Location {

	private String designation;
	private String state;
	private String city;
	private int locationNum;
	private int rentedUnitCount;
	private int row;
	private int col;
	private Unit[][] unitArr;
	
	
	public Location(String designation, int row, int col) throws Exception {
		this.designation = designation;
		this.rentedUnitCount = 0;
		this.row = row;
		this.col = col;
		this.unitArr = new Unit[12][20];
		for (int i = 0; i < 20; i++) {
			for (int j = 0; j < 12; j++) {
				unitArr[i][j] = new Unit(10, 10, 10, 10.0, unitType.STANDARD);
			}
		}
	}


	/*
	 * Getters and Setters
	 */
	
	public String getState() {
		return state;
	}

	public String getCity() {
		return city;
	}

	/*
	 * methods
	 */

	public String getDesignation() {
		return designation;
	}


	public int getRentedUnitCount() {
		return rentedUnitCount;
	}
	
	
	
}
