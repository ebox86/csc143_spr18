package StanleysStorage;

import StanleysStorage.Unit.unitType;

public class Location {

	private String designation;
	private int rentedUnitCount;
	private int row;
	private int col;
	private Unit[][] unitArr;
	private Customer[] custArr;
	
	
	public Location(String designation, int row, int col) throws Exception {
		this.designation = designation;
		this.rentedUnitCount = 0;
		this.row = row;
		this.col = col;
		this.unitArr = new Unit[row][col];
		this.custArr = new Customer[100];
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				unitArr[i][j] = new Unit(10, 10, 10, 10.0, unitType.STANDARD);
			}
		}
	}


	/*
	 * Getters and Setters
	 */
	
	

	/*
	 * methods
	 */

	public String getDesignation() {
		return designation;
	}


	public int getRentedUnitCount() {
		return rentedUnitCount;
	}
	
	
	public Unit getUnit(int row, int col) {
		return unitArr[row][col];
	}
	
	
	public Unit[] getEmptyUnits() {
		Unit[] tempArr = new Unit[this.row * this.col];
		int idx = 0;
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				if(unitArr[i][j].getCustomer() == null) {
					System.out.println(i + " row " + j + " col");
					tempArr[idx] = unitArr[i][j];
					idx += 1;
				}
			}
		}
		return tempArr;
	}
	
	public String toString() {
		String retVal = "";
		for (int i = 0; i < row; i++) {
			for (int j = 0; j < col; j++) {
				retVal += unitArr[i][j].toString() + "\n\n";
			}
			retVal += "\n";
		}
		return retVal;
	}
	
	
}
